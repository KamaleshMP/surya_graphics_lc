<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="paperformat_sale_report_new" model="report.paperformat">
        <field name="name">Sale Order Report</field>
        <field name="format">custom</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">1</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">80</field>
    </record>

    <report
            id="report_sale_report_action_new"
            model="sale.order"
            string=" Surya Sale Quotation Report"
            report_type="qweb-pdf"
            name="sale_quotation.report_sale_order_report_new"
            file="sale_quotation.report_sale_order_report_new"
            paperformat="sale_quotation.paperformat_sale_report_new"
            print_report_name='"Surya sale Report"'
            menu="True"
