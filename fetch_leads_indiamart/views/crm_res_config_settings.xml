<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.crm</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="5"/>
            <field name="inherit_id" ref="crm.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='generate_lead_setting_container']" position="after">
                    <div class="row mt16 o_settings_container">
                        <div class="col-lg-6 o_setting_box"
                             name="api_credentials">
                            <h2>API Credentials</h2>
                            <div class="o_setting_left_pane"></div>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">API Credentials</span>
                                <div class="text-muted">
                                    Enter the API Key provided from the third party app from where you need to fetch
                                    the details
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label string="API Credentials" for="api_key" class="col-lg-3 o_light_label"/>
                                        <field name="api_key"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>